<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/dniTextViewLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="DNI"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/dniEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/dniEditText" />

    <EditText
        android:id="@+id/dniEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="5"
        android:hint="@string/dni_hint"
        android:inputType="number"
        android:text="45827488"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/scanImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@id/dniEditText"
        app:layout_constraintStart_toEndOf="@+id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/dniEditText"
        app:srcCompat="@drawable/ic_barcode_scan" />

    <ImageButton
        android:id="@+id/searchImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="@id/dniEditText"
        app:layout_constraintStart_toEndOf="@+id/scanImageButton"
        app:layout_constraintTop_toTopOf="@id/dniEditText"
        app:srcCompat="@drawable/ic_account_search" />

    <TextView
        android:id="@+id/lastnamesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="APELLIDO"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/lastnamesEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/lastnamesEditText" />

    <EditText
        android:id="@+id/lastnamesEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/dniEditText"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/namesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="NOMBRE"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/namesEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/namesEditText" />

    <EditText
        android:id="@+id/namesEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/lastnamesEditText"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/companyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="COMPAÑIA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/companyEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/companyEditText" />

    <EditText
        android:id="@+id/companyEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/namesEditText"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/camoTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="CAMO"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/companyEditText"
         />

    <TextView
        android:id="@+id/camoTypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TIPO"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/camoTypeEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/camoTypeEditText" />

    <EditText
        android:id="@+id/camoTypeEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/camoTitleTextView"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/camoStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="ESTADO"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/camoStatusEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/camoStatusEditText" />

    <EditText
        android:id="@+id/camoStatusEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/camoTypeEditText"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/camoExpirationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="VIGENCIA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/camoExpirationEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/camoExpirationEditText" />

    <EditText
        android:id="@+id/camoExpirationEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/camoStatusEditText"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/sctrTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="SCTR"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/camoExpirationEditText"
        />

    <TextView
        android:id="@+id/sctrStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="ESTADO"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/sctrStatusEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/sctrStatusEditText" />

    <EditText
        android:id="@+id/sctrStatusEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/sctrTitleTextView"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/sctrExpirationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="VIGENCIA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/sctrExpirationEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/sctrExpirationEditText" />

    <EditText
        android:id="@+id/sctrExpirationEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/sctrStatusEditText"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton"/>

    <TextView
        android:id="@+id/formTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="FORMULARIO DE SINTOMATOLOGÍA COVID-19"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sctrExpirationEditText" />

    <TextView
        android:id="@+id/formStatusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="ESTADO"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/formStatusEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/formStatusEditText" />

    <EditText
        android:id="@+id/formStatusEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/formTitleTextView"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton" />

    <TextView
        android:id="@+id/formExpirationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="VIGENCIA"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/formExpirationEditText"
        app:layout_constraintEnd_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toTopOf="@id/formExpirationEditText" />

    <EditText
        android:id="@+id/formExpirationEditText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:enabled="false"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/dniEditText"
        app:layout_constraintTop_toBottomOf="@id/formStatusEditText"
        app:layout_constraintEnd_toEndOf="@id/searchImageButton" />

</android.support.constraint.ConstraintLayout>